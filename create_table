-- this script creates a table I import data into
CREATE TABLE hate_crime (
  INCIDENT_ID int,
  INCIDENT_NO varchar(100),
  DATA_YEAR smallint,
  ORI varchar(10),
  PUB_AGENCY_NAME varchar(100),
  PUB_AGENCY_UNIT varchar(100),
  AGENCY_TYPE_NAME varchar(100),
  STATE_ABBR varchar(2),
  STATE_NAME varchar(100),
  DIVISION_NAME varchar(50),
  REGION_NAME varchar(50),
  POPULATION_GROUP_CODE varchar(2),
  POPULATION_GROUP_DESC varchar(50),
  INCIDENT_DATE varchar(10),
  ADULT_VICTIM_COUNT tinyint,
  JUVENILE_VICTIM_COUNT tinyint, 
  TOTAL_OFFENDER_COUNT tinyint,
  ADULT_OFFENDER_COUNT tinyint,
  JUVENILE_OFFENDER_COUNT tinyint,
  OFFENDER_RACE varchar(50),
  OFFENDER_ETHNICITY varchar(50),
  VICTIM_COUNT tinyint,
  OFFENSE_NAME varchar(120),
  TOTAL_INDIVIDUAL_VICTIMS  smallint,
  LOCATION_NAME varchar(100),
  BIAS_DESC varchar(100),
  VICTIM_TYPES varchar(100),
  MULTIPLE_OFFENSE varchar(1),
  MULTIPLE_BIAS varchar(1) 
 );
